{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src", "types"],
  "exclude": [
    "node_modules",
    "dist",
    "src/client/**/*",
    "ParserForChuncks/**/*",
    "src/utils/memory/**/*"
  ]
} 