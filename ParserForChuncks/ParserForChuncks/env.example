# ======================================
# EAA ChatBot Environment Configuration
# ======================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Model Configuration
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=2000

# Vector Search Configuration
SIMILARITY_THRESHOLD=0.78
MAX_CHUNKS=5

# Email Configuration (Optional - for escalation notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password
ESCALATION_EMAIL=support@your-company.com

# Database Configuration (Optional - for local development)
DATABASE_URL=postgresql://user:password@localhost:5432/eaa_chatbot

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
ENABLE_VOICE_INPUT=true
ENABLE_FRUSTRATION_DETECTION=true
ENABLE_EMAIL_ESCALATION=true
ENABLE_PROACTIVE_AGENT=true

# Performance Configuration
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=10

# Development Configuration
DEBUG_LOGS=false
ENABLE_MOCK_RESPONSES=false 